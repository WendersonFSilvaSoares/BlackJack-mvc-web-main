
@{
    ViewData["Title"] = "BlackJack";
}

<h1 class="text-center mb-5">Jogo BlackJack</h1>


<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="text-center mb-3">
            <h3>Jogador Um</h3>
            <p>Vitórias: <span id="vitorias1">0</span></p>

            <img alt="carta1" src="/images/0.png" height="350" width="250" id="cartas1">

            <div class="d-flex justify-content-around mt-3">
                <button class="btn btn-primary" id="btn_jogador_1" onclick="jogador1()">
                    Jogar
                </button>
                <button class="btn btn-primary" id="btn_parar_1" onclick="parar1()">
                    Parar
