                <span id="jogador1">0</span>
                <span class="mx-2">X</span>
                <span id="jogador2">0</span>
            </div>
        </div>
        <div class="text-center mb-3">

            <h3>Jogador Dois</h3>
            <p>Vitórias: <span id="vitorias2">0</span></p>


            <img alt="carta2" src="/images/0.png" height="350" width="250" id="cartas2">


            <div class="d-flex justify-content-around mt-3">
                <button class="btn btn-primary" id="btn_jogador_2" onclick="jogador2()">
                    Jogar
                </button>
                <button class="btn btn-primary" id="btn_parar_2" onclick="parar2()">
                    Parar
                </button>
            </div>
        </div>
    </div>
</div>